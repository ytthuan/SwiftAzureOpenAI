    "securitySchemes": {
      "ApiKeyAuth": {
        "in": "header",
        "name": "api-key",
        "type": "apiKey"
      }
    }
  },
  "info": {
    "description": "Azure OpenAI API for responses, embeddings, and file operations",
    "title": "Azure OpenAI API",
    "version": "2024-10-01-preview"
  },
  "openapi": "3.0.1",
  "paths": {
    "/embeddings": {
      "post": {
        "operationId": "createEmbedding",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmbeddingsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmbeddingsResponse"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "Create embeddings",
        "tags": [
          "Embeddings"
        ]
      }
    },
    "/files": {
      "get": {
        "operationId": "listFiles",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileListResponse"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "List files",
        "tags": [
          "Files"
        ]
      },
      "post": {
        "operationId": "uploadFile",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/FileUploadRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileResponse"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "Upload a file",
        "tags": [
          "Files"
        ]
      }
    },
    "/files/{file_id}": {
      "delete": {
        "operationId": "deleteFile",
        "parameters": [
          {
            "in": "path",
            "name": "file_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteResponse"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "Delete a file",
        "tags": [
          "Files"
        ]
      },
      "get": {
        "operationId": "retrieveFile",
        "parameters": [
          {
            "in": "path",
            "name": "file_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileResponse"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "Retrieve a file",
        "tags": [
          "Files"
        ]
      }
    },
    "/responses": {
      "post": {
        "operationId": "createResponse",
        "parameters": [
          {
            "in": "query",
            "name": "api-version",
            "required": true,
            "schema": {
              "default": "preview",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResponsesRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsesResponse"
                }
              },
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "Success"
          }
        },
        "summary": "Create a response",
        "tags": [
          "Responses"
        ]
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "servers": [
    {
      "url": "https://{endpoint}/openai/v1",
      "variables": {
        "endpoint": {
          "default": "example.openai.azure.com"
        }
      }
    }
  ]
}