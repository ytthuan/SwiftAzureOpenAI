          "id": {
            "type": "string"
          },
          "object": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "Embedding": {
        "properties": {
          "embedding": {
            "items": {
              "type": "number"
            },
            "type": "array"
          },
          "index": {
            "type": "integer"
          },
          "object": {
            "enum": [
              "embedding"
            ],
            "type": "string"
          }
        },
        "type": "object"
      },
      "EmbeddingsRequest": {
        "properties": {
          "dimensions": {
            "description": "Number of dimensions for the embedding",
            "type": "integer"
          },
          "encoding_format": {
            "default": "float",
            "enum": [
              "float",
              "base64"
            ],
            "type": "string"
          },
          "input": {
            "description": "Text input to get embeddings for",
            "oneOf": [
              {
                "type": "string"
              },
              {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            ]
          },
          "model": {
            "description": "The model to use for embeddings",
            "type": "string"
          },
          "user": {
            "description": "Unique identifier for the end-user",
            "type": "string"
          }
        },
        "required": [
          "model",
          "input"
        ],
        "type": "object"
      },
      "EmbeddingsResponse": {
        "properties": {
          "data": {
            "items": {
              "$ref": "#/components/schemas/Embedding"
            },
            "type": "array"
          },
          "model": {
            "type": "string"
          },
          "object": {
            "enum": [
              "list"
            ],
            "type": "string"
          },
          "usage": {
            "$ref": "#/components/schemas/TokenUsage"
          }
        },
        "type": "object"
      },
      "FileListResponse": {
        "properties": {
          "data": {
            "items": {
              "$ref": "#/components/schemas/FileResponse"
            },
            "type": "array"
          },
          "object": {
            "enum": [
              "list"
            ],
            "type": "string"
          }
        },
        "type": "object"
      },
      "FileResponse": {
        "properties": {
          "bytes": {
            "type": "integer"
          },
          "created_at": {
            "type": "integer"
          },
          "filename": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "object": {
            "enum": [
              "file"
            ],
            "type": "string"
          },
          "purpose": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "FileUploadRequest": {
        "properties": {
          "file": {
            "description": "The file to upload",
