            "type": "string"
          },
          "purpose": {
            "description": "The purpose of the file upload",
            "type": "string"
          }
        },
        "required": [
          "file",
          "purpose"
        ],
        "type": "object"
      },
      "InputMessage": {
        "properties": {
          "content": {
            "items": {
              "$ref": "#/components/schemas/ContentPart"
            },
            "type": "array"
          },
          "role": {
            "enum": [
              "user",
              "assistant",
              "system"
            ],
            "type": "string"
          }
        },
        "required": [
          "role",
          "content"
        ],
        "type": "object"
      },
      "OutputContentPart": {
        "properties": {
          "text": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "ResponseChoice": {
        "properties": {
          "finish_reason": {
            "type": "string"
          },
          "index": {
