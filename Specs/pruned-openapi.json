          },
          "message": {
            "$ref": "#/components/schemas/ResponseMessage"
          }
        },
        "type": "object"
      },
      "ResponseMessage": {
        "properties": {
          "content": {
            "items": {
              "$ref": "#/components/schemas/OutputContentPart"
            },
            "type": "array"
          },
          "role": {
            "type": "string"
          }
        },
        "type": "object"
      },
